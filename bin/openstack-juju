JUJU_ROOT=`openstack-install -g juju_home`
JUJU_ENVIRONMENTS_PATH=`openstack-install -g juju_environments_path`

if [ -f $JUJU_ENVIRONMENTS_PATH ]; then
  JUJU_HOME=$JUJU_ROOT juju switch openstack >>/dev/null
  JUJU_HOME=$JUJU_ROOT exec juju $@
else
  echo -e "Unable to find a proper OpenStack Juju environment.\n\nPlease run 'sudo openstack-install' to begin."
  exit 1
fi
